<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/userid_sync_sleep"
            android:textColor="@color/COLOR_4"
            android:textSize="@dimen/Title_4" />

        <EditText
            android:id="@+id/et_userid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="4dp"
            android:background="@drawable/et_bg"
            android:gravity="center_vertical"
            android:hint="@string/enter_userid"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/COLOR_3"
            android:textColorHint="@color/black_30"
            android:textSize="@dimen/Title_3" />

        <Button
            android:id="@+id/btn_connect_device"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/connect_device"
            android:textSize="@dimen/Title_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/device_infos"
            android:textColor="@color/COLOR_4"
            android:textSize="@dimen/Title_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_device_name"
                style="@style/common_bt"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/device_id_clear"
                android:textSize="@dimen/Title_2" />

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/execute_progress_win_bg"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_device_id"
                style="@style/common_bt"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/device_id_cipher"
                android:textSize="@dimen/Title_2" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/execute_progress_win_bg"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_device_battery"
                style="@style/common_bt"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/obtain_electricity"
                android:textSize="@dimen/Title_2" />

            <TextView
                android:id="@+id/tv_device_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/execute_progress_win_bg"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_mac"
                style="@style/common_bt"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/obtain_mac_address"
                android:textSize="@dimen/Title_2" />

            <TextView
                android:id="@+id/tv_mac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/execute_progress_win_bg"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/firmware_info"
            android:textColor="@color/COLOR_4"
            android:textSize="@dimen/Title_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_device_version"
                style="@style/common_bt"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/obtain_firmware"
                android:textSize="@dimen/Title_2" />

            <TextView
                android:id="@+id/tv_device_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/execute_progress_win_bg"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_upgrade_fireware"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/fireware_update"
            android:textSize="@dimen/Title_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:text="@string/setting"
            android:textColor="@color/COLOR_4"
            android:textSize="@dimen/Title_4" />

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height" >

            <TextView
                android:id="@+id/label_alarm_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/apnea_alert"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_2" />

            <CheckBox
                android:id="@+id/cb_alarm_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/cb_switch_bg" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <TextView
            android:id="@+id/set_alarm_time_range"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_right"
            android:gravity="left|center_vertical"
            android:text="@string/set_alert_switch"
            android:textColor="@drawable/label_text_color"
            android:textSize="@dimen/Title_2" />

        <include layout="@layout/divider_line" />
    </LinearLayout>

</ScrollView>