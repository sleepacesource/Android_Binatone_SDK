<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:gravity="center_vertical"
        android:textColor="@color/COLOR_4"
        android:textSize="@dimen/Title_3" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:gravity="center_vertical"
        android:textColor="@color/COLOR_4"
        android:textSize="@dimen/Title_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <EditText
            android:id="@+id/et_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/execute_progress_win_bg"
            android:gravity="center_vertical"
            android:inputType="number"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_3" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="15dp"
        android:textColor="@color/COLOR_4"
        android:textSize="@dimen/Title_3" />

    <TextView
        android:id="@+id/tv_device_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/execute_progress_win_bg"
        android:drawableRight="@drawable/ic_arrow_d"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/COLOR_3"
        android:textSize="@dimen/Title_3" />

    <Button
        android:id="@+id/btn_connect_device"
        style="@style/common_bt"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="@dimen/activity_margin"
        android:text="@string/connect_device" />

</LinearLayout>