<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.binatonesdk.demo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_3" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_1" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/COLOR_2"
            android:textSize="@dimen/Title_3" />
    </RelativeLayout>
    
    <include layout="@layout/divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >

        <com.binatonesdk.demo.view.wheelview.WheelView
            android:id="@+id/hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            custom:textColorCenter="@color/COLOR_2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/transparent" />

        <com.binatonesdk.demo.view.wheelview.WheelView
            android:id="@+id/minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            custom:textColorCenter="@color/COLOR_2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/transparent" />
    </LinearLayout>

</LinearLayout>